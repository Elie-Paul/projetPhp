{% extends 'base.html.twig' %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/style.css') }}">	
	<link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block body %}
	<h1>Connexion</h1>

	<form action="{{ path('security_login') }}" method="POST">
		<div class="from-group">
			<input placeholder="Address mail" required name="_username" type="text" class="form-Control">			
		</div>
		<div class="from-group">
			<input placeholder="Mot de passe" required name="_password" type="password" class="form-Control">		
		</div>
		<div class="from-group">
			<button type="submit" class="btn btn-succes">Connexion</button>		
		</div>
	</form>

{% endblock %}
